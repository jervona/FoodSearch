<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/business_image"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/business_image"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:text="name" />

    <ImageView
        android:id="@+id/rating_image"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_alignBottom="@+id/name"
        android:layout_alignEnd="@+id/display_address"
        android:scaleType="centerCrop"
        android:src="@drawable/star"
        android:tint="@color/colorAccent" />

    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rating_image"
        android:layout_toEndOf="@+id/rating_image"
        tools:text="5.0" />


    <TextView
        android:id="@+id/display_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/name"
        android:layout_centerVertical="true"
        tools:text="display address" />


</RelativeLayout>


